extends layout

block content
    h1=title

    form(method='POST' action='' enctype='multipart/form-data')
        div.form-group
          label(for='name') Category Name:
          input#name.form-control(type='text' placeholder='Category name' name='name' required='true' value=(undefined===category ? '' : category.name) )
        div.form-group
          label(for='img') Photo:
          input#img.form-control-file(type='file' name='img' required='true' value=(undefined===category ? '' : category.img) )
        div.form-group
          label(for='summary') Summary:
          textarea#summary.form-control(type='textarea', placeholder='Summary' name='summary' required='true') #{undefined===category ? '' : category.summary}
        button.btn.btn-primary(type='submit') Submit
    if errors
      ul
        for error in errors
          li!= error.msg